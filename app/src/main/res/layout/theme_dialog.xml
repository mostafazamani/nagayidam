<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="35dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="?attr/textcolor"

        android:text="Choose Your Theme Color"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:elevation="8dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/azure"
                app:cardCornerRadius="23dp"
                android:layout_margin="4dp"
                android:id="@+id/blue_theme">

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:elevation="8dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/ferrari"
                app:cardCornerRadius="23dp"

                android:id="@+id/red_theme">

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:elevation="8dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="23dp"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/yellow"
                android:id="@+id/yellow_theme">

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/orange"
            app:cardCornerRadius="23dp"
            android:layout_margin="4dp"
            android:id="@+id/orange_theme">

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="23dp"

            android:id="@+id/green_theme">

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="23dp"
            android:layout_margin="4dp"
            android:id="@+id/purple_theme">

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="23dp"
            app:cardBackgroundColor="@color/ruby"
            android:layout_margin="4dp"
            android:id="@+id/ruby_theme">

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/lightBlue"
            app:cardCornerRadius="23dp"

            android:id="@+id/lightbliue_theme">

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="23dp"
            android:background="@color/yellow2"
            android:layout_margin="4dp"
            android:id="@+id/lightyellow_theme">

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>