<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor">


    <ImageView
        android:id="@+id/banner_profile"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="75dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@color/lightBlue"
            app:cardBackgroundColor="@color/lightBlue"
            app:cardCornerRadius="50dp">

            <androidx.cardview.widget.CardView
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"

                android:background="@color/whiteSmoke"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardCornerRadius="50dp">


                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">




                <Button
                    android:id="@+id/follower_num"
                    android:layout_width="wrap_content"

                    android:layout_margin="@dimen/follow_card_margin"

                    android:padding="5dp"
                    android:layout_weight="1"
                    android:elevation="8dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_info_follower_wing"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="..."
                    android:textColor="?attr/textcolor"
                    android:textSize="@dimen/text_size_homefragment_info" />

                <Button
                    android:id="@+id/following_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="@dimen/follow_card_margin"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:elevation="8dp"
                    android:background="@drawable/shape_info_follower_wing"
                    android:text="..."
                    android:textColor="?attr/textcolor"
                    android:textSize="@dimen/text_size_homefragment_info" />




        </LinearLayout>
    </LinearLayout>
</RelativeLayout>