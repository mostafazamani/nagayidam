<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor">


    <com.jh.circularlist.CircularListView
        android:id="@+id/my_circular_list"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@color/lightBlue"
            app:cardBackgroundColor="@color/lightBlue"
            app:cardCornerRadius="50dp">

            <androidx.cardview.widget.CardView
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@color/whiteSmoke"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardCornerRadius="50dp">


                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </com.jh.circularlist.CircularListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/search_fab"
        android:padding="8dp"
        android:layout_below="@+id/my_circular_list"

        >
        <TextView
            android:id="@+id/txt_crushs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Sorry!!!!!!!!!!"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="35dp"

           android:orientation="horizontal">




           <TextView
               android:layout_width="wrap_content"
               android:layout_height="30dp"
               android:gravity="center"
               android:padding="4dp"
               android:layout_marginEnd="2dp"
               android:layout_marginStart="2dp"
               android:layout_gravity="center"
               android:textColor="?attr/textcolor"

               android:background="@android:color/transparent"
               android:text="Your Relationship :"/>


           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:cardElevation="8dp"

               android:layout_marginStart="1dp"
               android:layout_marginEnd="1dp"
               android:layout_gravity="center"
               app:cardBackgroundColor="@color/lightBlue"

               app:cardCornerRadius="28dp">

               <androidx.cardview.widget.CardView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_margin="1dp"
                   app:cardBackgroundColor="?attr/cardBackground"
                   android:padding="2dp"
                   app:cardCornerRadius="28dp">

                   <ImageView
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:id="@+id/crush_list_status"
                       android:gravity="center"
                       android:padding="4dp"
                       android:layout_gravity="center"
                       android:background="@android:color/transparent"
                      />
               </androidx.cardview.widget.CardView>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:cardElevation="8dp"
               android:layout_marginStart="1dp"
               android:layout_marginEnd="1dp"
               android:layout_gravity="center"
               app:cardBackgroundColor="@color/lightBlue"

               app:cardCornerRadius="28dp">

               <androidx.cardview.widget.CardView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_margin="1dp"
                   app:cardBackgroundColor="?attr/cardBackground"
                   android:padding="2dp"
                   app:cardCornerRadius="28dp">

                   <Button
                       android:id="@+id/btn_refresh_crushs"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:background="@drawable/ic_baseline_refresh_24"
                       android:layout_centerInParent="true"
                       />
               </androidx.cardview.widget.CardView>
           </androidx.cardview.widget.CardView>

       </LinearLayout>




<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="16dp"
    android:layout_gravity="center"
    app:cardCornerRadius="8dp"
    >

    <ListView
        android:id="@+id/crushs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/search_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="add" />

    <Button
        android:id="@+id/remove"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/add_btn"
        android:text="remove" />
</RelativeLayout>