<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="16dp"

    app:cardBackgroundColor="@color/background2"
    android:background="@color/background2"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="?attr/cardBackground"
        android:orientation="horizontal"
        >


    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"

        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="30dp"
        android:padding="2dp"
        app:cardBackgroundColor="@color/lightBlue"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"

            android:background="@color/background"
            android:id="@+id/profile_image_fnfy"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"

            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Twitter Name"

            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="@android:color/transparent"
            android:textColor="@color/textcolor"
            android:id="@+id/profile_id_fnfy"
            android:gravity="start|bottom"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="@android:color/transparent"
            android:textColor="@color/textcolor_tint"
            android:id="@+id/profile_name_fnfy"
            android:layout_gravity="start|top"
            android:gravity="start"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="UnFollow"
        android:layout_gravity="center"
        android:background="@drawable/shape_follow_btn"
        android:gravity="center"
        android:padding="4dp"
        android:layout_margin="5dp"
        android:id="@+id/unfollow_btn_fnfy"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>